<Page x:Class="ColonyManager.WPF.Pages.PeoplesManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColonyManager.WPF.Pages"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PeoplesManagementPage"
      Background="White">

    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <behaviors:InvokeCommandAction Command="{Binding LoadPeoplesListCommand}"/>
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>

    <Grid>
        <ListView Margin="10" Name="Peoples" ItemsSource="{Binding Peoples}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="FirstName" Width="Auto" DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Header="LastName" Width="Auto" DisplayMemberBinding="{Binding LastName}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
